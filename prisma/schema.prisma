generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Request {
  requestId        Int    @id @default(autoincrement())
  organizationName String
  contactPerson    String
  phoneNumber      String
  email            String
  deadline         String
  firstCategory    String
  secondCategory   String
  description      String
  filePath         String
}

model AppUser {
  userId   Int    @id @default(autoincrement())
  email    String @unique
  password String
  login    String @unique
}

model ProjectCard {
  projectId   Int    @id @default(autoincrement())
  projectName String
  description String
  filePath    String
}

model Admin {
  adminId  Int    @id @default(autoincrement())
  email    String @unique
  login    String @unique
  password String
}

model Teacher {
  teacherId   Int    @id @default(autoincrement())
  photoPath   String
  fullName    String
  description String
}
